<!DOCTYPE html>
<html lang="en" data-ng-app="@ViewBag.InitModule">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Observer - Endeavour Foundation">
    <meta name="author" content="Ramtin Arab">
    <title>@ViewBag.Title - Observer</title>
    <!-- Bootstrap -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap responsive -->
    <link href="~/Content/css/bootstrap-responsive.min.css" rel="stylesheet">
    <!-- Font awesome - iconic font with IE7 support -->
    <link href="~/Content/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/css/font-awesome-ie7.css" rel="stylesheet">
    <!-- Bootbusiness theme -->
    <link href="~/Content/css/boot-business.css" rel="stylesheet">
    
    <!-- Customized style -->
    <link href="~/Content/Site.css" rel="stylesheet">
</head>
<body>

    <!-- Start: HEADER -->
    <header>
        <!-- Start: Navigation wrapper -->
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a href="index.html" class="brand brand-bootbus">Observer</a>
                    <!-- Below button used for responsive navigation -->
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!-- Start: Primary navigation -->
                    <div class="nav-collapse collapse ">
                        <ul class="nav pull-right">
                            <li><a href="/#/">Home</a></li>
                            <li><a href="/#/newtopic/">Create New Topic</a></li>
                            <li><a href="/#/topicssearch/">Find Topic</a></li>
                            <li>@ViewBag.UserName<i class="icon-user"></i></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- End: Navigation wrapper -->
    </header>
    <!-- End: HEADER -->
    <!-- Main content -->
  

        <div class="main content" >
            <div class="container">
                <div class="row">
                    <div class="span12 hidden-desktop">
                        <div class="padd">
                            <div class="navis"></div>
                        </div>
                    </div>
                    @RenderBody()
                </div>
            </div>
        </div>
   
    <footer>
        <div class="container visible-desktop">
            <div class="row">

                <div class="span2">
                    <h4><i class="icon-thumbs-up icon-white"></i> Support</h4>
                    <nav>
                        <ul class="quick-links">
                            <li><a href="faq.html">FAQ</a></li>

                        </ul>
                    </nav>

                </div>

            </div>
        </div>
        <hr class="footer-divider  visible-desktop">
        <div class="container">
            <p>
                &copy; 1930-2050 Endeavour foundation, Inc. All Rights Reserved.
            </p>
        </div>
    </footer>

    <script type="text/javascript" src="~/Scripts/jquery-2.1.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/boot-business.js"></script>
    <script type="text/javascript" src="~/Scripts/angular.min.js"></script>
    <script type="text/javascript" src="~/Scripts/ui-bootstrap-0.10.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/ui-bootstrap-tpls-0.10.0.min.js"></script>
    
    
    @RenderSection("scripts", required: false)
</body>
</html>
